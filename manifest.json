{
  "manifest_version": 3,
  "name": "Udemy Downloader",
  "description": "Udemy downloader extension.",
  "version": "1.0.0",
  "minimum_chrome_version": "109",

  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },

  "background": {
    "service_worker": "createWindow.js"
  },

  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },

  "permissions": [
    "downloads",
    "cookies",
    "windows"
  ],

  "host_permissions": [
    "*://*.samsungu.udemy.com/*"
  ]
}
